configuration {
	modi: "drun";
	icon-theme: "ePapirus";
	width: 35;
	show-icons: true;
	drun-display-format: "{icon} {name}";
	display-drun: "Open";
	location: 0;
	disable-history: false;
}

* {
	background-color: #1D2021;
	text-color: #EBDBB2;	
	show-icons: true;
}

window {
	height: 350px;
	border:  3px;
	background-color: #EBDBB2;
}

mainbox {
	padding: 5px;
}

inputbar {
	children: [prompt, entry];
}

prompt {
	background-color: #EBDBB2;
	padding: 5px 5px 0px;
	text-color: @background-color;
}

entry {
	padding: 5px;
}

listview {
    padding: 5px 0px 0px 0px;
	columns: 3;
}

element {
    padding: 3px;
}

element-icon {
	size: 16px;
}

element selected {
    background-color: #666666;
    text-color: #121212;
}
